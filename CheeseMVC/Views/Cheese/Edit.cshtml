
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Cheese @ViewBag.cheese.Name (id=@ViewBag.cheese.CheeseId)</h2>

<form method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control" value="@ViewBag.cheese.Name" />
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input type="text" name="description" class="form-control" value="@ViewBag.cheese.Description">
    </div>
    <input type="hidden" value="@ViewBag.cheese.CheeseId" name="id" />
    <input type="submit" value="Edit Cheese" class="btn btn-default" />
</form>